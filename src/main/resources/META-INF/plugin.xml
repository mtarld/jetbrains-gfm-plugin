<idea-plugin>
    <id>com.mtarld.github-fm</id>
    <name>Github Flavoured Markdown</name>
    <vendor email="mathias.arlaud@gmail.com" url="https://github.com/mtarld">Mathias Arlaud</vendor>

    <!-- TODO Depends on lang and markdown -->
    <description><![CDATA[
    <b>GitHub Flavoured Markdown</b> - Displays markdown preview with the Github flavoured style.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Foo" extensions="foo" language="Foo" implementationClass="com.mtarld.githubfm.lang.FooType" fieldName="INSTANCE"/>
        <fileEditorProvider implementation="com.mtarld.githubfm.ui.editor.MarkdownEditorWithPreviewProvider" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>